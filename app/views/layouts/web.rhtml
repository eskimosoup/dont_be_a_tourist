    <script>
      document.observe('dom:loaded', function (){

        $('toggleswitch').observe('click', function () {
          if($(this).innerHTML == 'Show all'){
            $(this).innerHTML = 'Hide all';
            $$(".toggleswitch-individual").each(function(Elem) { Elem.innerHTML = 'Hide' });
            $$(".day-it-toggled").each(Element.show);
          }
          else {
            $(this).innerHTML = 'Show all';
            $$(".toggleswitch-individual").each(function(Elem) { Elem.innerHTML = 'Show' });
            $$(".day-it-toggled").each(Element.hide);
          }

        });
      });

      function daytoggle(div, item) {
        Effect.toggle(div, 'slide');

        if($(item).innerHTML == 'Show'){
          $(item).innerHTML = 'Hide';
        }
        else {
          $(item).innerHTML = 'Show';
        }
      }
    </script>
    <script>
