<!-- TOP BANNER -->

<% if @page_name == "home_page" %>
  <div class="top_home">
<% elsif @page_name == "universities" %>
  <div class="top_home">
<% else %>
  <div class="top">
<% end %>

  <div class="inner">

    <% if @page_name == "home_page" %>
      <%= link_to image_tag("logo.gif", :alt => "Don't be a Tourist", :title => "Don't be a Tourist", :border => "0", :hspace => "0", :vspace => "0", :class => "logo")+ '', {:controller => 'web', :action => 'index'} %>
    <% elsif @page_name == "universities" %>
      <%= link_to image_tag("logo.gif", :alt => "Don't be a Tourist", :title => "Don't be a Tourist", :border => "0", :hspace => "0", :vspace => "0", :class => "logo")+ '', {:controller => 'web', :action => 'index'} %>
    <% else %>
      <%= link_to image_tag("logo_blue.gif", :alt => "Don't be a Tourist", :title => "Don't be a Tourist", :border => "0", :hspace => "0", :vspace => "0", :class => "logo")+ '', {:controller => 'web', :action => 'index'} %>
    <% end %>

    <div class="top_navs">

      <!-- TOP NAVIGATION -->

      <div class="nav">
        <% form_tag "/trip/search", :method => :get do %>
          <%= text_field_tag :search_criteria, nil, :placeholder => "Search" %>
          <%= submit_tag "Go", :class => "search-button" %>
        <% end %>

        <% if session[:user_id] %>
          <%= link_to "Your Bookings", {:controller => "user", :action => "home"}, {:class => "your_bookings", :accesskey => "6"} %>
        <% else %>
          <%= link_to "Your Bookings", {:controller => "user", :action => "login"}, {:class => "your_bookings", :accesskey => "6"} %>
        <% end %>
      </div>

      <!-- MAIN NAVIGATION -->

      <div class="main_nav">
        <%= link_to "Contact us", {:controller => "web", :action => "contact"}, {:accesskey => "2"} %>
        <%#= link_to "Special Offers", {:controller => "web", :action => "special_offers"}, {:accesskey => "9"} %>
        <%#= link_to "What's it like?", {:controller => "web", :action => "past_trips"}, {:accesskey => "8"} %>
        <%= link_to "Info for universities", "http://www.dbat.co.uk/", :target => "_blank" %>
        <%= link_to "Search all tours", {:controller => "trip", :action => "list"}, {:accesskey => "7"} %>
      </div>
    </div>
  </div>

</div>

<!-- HOMEPAGE TOP BANNER -->
<% if @page_name == "home_page" %>
  <div class="top_home_main home-page">
    <div class="inner home-inner">

      <div class="home-banner-inner">
        <div class="university-cta">
          <h2>Find YOUR next ADVENTURE!</h2>

          <div class="university-cta-area">
            <% unless @universities.blank? %>
              <div class="half_width_item half_width_item_left">
                <% form_tag "#", :method => :get, :class => 'university-select' do %>
                  <%= label_tag :uni_id, "<strong>My university</strong> (or nearest me)".html_safe %>
                  <%= select_tag(:uni_id, options_for_select(@universities.map{|x| [x.name, x.slug.name]}), {:class => "cta"}) %>
                  <%= submit_tag "Go", :class => "go" %>
                <% end %>
              </div>
            <% end %>

            <!--
            <% unless @all_trips.blank? %>
              <div class="half_width_item half_width_item_right">
                <% form_tag "/trip/show", :method => :get do %>
                  <%= label_tag :id, "Trip name", :class => "bold-label" %>
                  <%= select_tag(:id, options_for_select(@all_trips.map{|x| [x.name, x.id]}), {:class => "cta"}) %>
                  <%= submit_tag "Go", :class => "go" %>
                <% end %>
              </div>
            <% end %>
            -->

            <% unless @all_trips.blank? %>
              <div class="half_width_item half_width_item_right">
                <% form_tag "/trip/search", :method => :get do %>
                  <%= label_tag :trip_group_id, "Trip name", :class => "bold-label" %>
                  <%= select_tag(:trip_group_id, options_for_select(@trip_groups.map{|x| [x.name, x.id.to_s]}, :selected => params[:trip_group_id]), {:class => "cta"}) %>
                  <%= submit_tag "Go", :class => "go" %>
                <% end %>
              </div>
            <% end %>

            <div class="clear"></div>
          </div>
        </div>
      </div>

      <div class="banner-wrapper">

      <ul data-orbit>
      <% for banner in banners -%>
        <% content_tag :div, :id => "banner_#{banner.id}", :class => "home_banner_container" do -%>
          <%= render 'layouts/home_banner', :banner => banner %>
        <% end -%>
      <% end -%>
      </ul>

      </div>

    </div>
  </div>


<% end %>

<!-- MAIN CONTENT -->
<div class="inner white-bg">

  <% unless hide_flash? %>
    <%- flash.each do |name, msg| -%>
      <%= content_tag :div, msg, :id => "flash_#{name}" %>
    <%- end -%>
  <% end -%>

  <% unless hide_right? %>

  <% if (@page_name == "home_page") or (@page_name == "universities") %>
    <div id="content_homepage">
      <%= @content_for_layout %>
     </div>
    <% else %>
    <div id="content">
      <%= @content_for_layout %>
     </div>
  <% end %>

    <div class="right">
      <%= render :partial => "shared/your_booking" %>
      <% if yield :right %>
        <%= yield :right %>
      <% else %>
        <%= render :partial => 'web/right_main' %>
      <% end %>
    </div>

    <div class="clear"></div>

  <% else %>

    <% if (@page_name == "home_page") or (@page_name == "universities") %>
      <div id="content_homepage">
    <% else %>
      <div id="content_long">
    <% end %>
      <%= @content_for_layout %>
      <div class="clear"></div>
     </div>

  <% end %>

</div>

