    <script>
      $(document).foundation({
        orbit: {
          animation: 'slide',
          timer: true,
          timer_speed: 5000,
          animation_speed: 500,
          navigation_arrows: true,
          next_on_click: true,
          swipe: true,
          pause_on_hover: true,
          resume_on_mouseout: true,
          bullets: false,
          slide_number: false
        }
      });



      $(document).ready(function() {
        $('.university-select').submit( function() {
          var  uniId = $('#uni_id').find(":selected").val();

          window.location = '/universities/' + uniId;

          return false;
        });

        var docWidth = 0;
        if ($(window).width() < 1920) {
          docWidth = (1920 - $(window).width()) / 2;


          $('.top_home_main.home-page').height($(window).height() / 100 * 80);
          $('.top_home_main .home-inner').height($(window).height() / 100 * 80);
          $('.top_home_main .home-inner img').height($(window).height() / 100 * 80);
          $('.home-banner-large').css("left", "-" + docWidth + "px");

          $('.orbit-next').css("left", ($(window).width() - 26) + "px");
        } else {
          // set this to match the height of the image
          //$('.top_home_main.home-page').height("631px");
          $('.top_home_main.home-page').height("694px");
          $('.top_home_main .home-inner').height("694px");
          $('.top_home_main .home-inner img').height("694px");
        }
      });

      $(window).resize(function() {
        var docWidth = 0;

        console.log($(window).width());

        if ($(window).width() < 1920) {
          docWidth = (1920 - $(window).width()) / 2;


          $('.top_home_main.home-page').height($(window).height() / 100 * 80);
          $('.top_home_main .home-inner').height($(window).height() / 100 * 80);
          $('.top_home_main .home-inner img').height($(window).height() / 100 * 80);
          $('.home-banner-large').css("left", "-" + docWidth + "px");

          $('.orbit-next').css("left", ($(window).width() - 26) + "px");
        } else {
          $('.home-banner-large').css({"left": "-50%", "marginLeft": "960px"});
          // set this to match the height of the image
          $('.top_home_main.home-page').height("734px");
          $('.top_home_main .home-inner').height("734px");
          $('.top_home_main .home-inner img').height("734px");
        }
      });
    </script>
  <% end %>
